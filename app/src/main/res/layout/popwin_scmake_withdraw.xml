<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_popwin_search">

    <LinearLayout
        style="@style/PopWinStyle">
        <RelativeLayout
            style="@style/PopWinContentWithViewStyle">
            <!--可见的内容-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/space_popwin"
                android:layout_centerInParent="true">
                <TextView
                    android:text="回退备料"
                    style="@style/PopWinTitleStyle"/>
                <!--全部取消的按钮-->
                <Button
                    style="@style/ButtonWithDrawStyle"
                    android:text="@string/btn_withdrawall_fragment_scmake"/>
                <View
                    android:layout_marginTop="@dimen/space_top_line_15"
                    android:layout_marginBottom="@dimen/space_bottom_line_16"
                    android:background="@color/button"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>
                <com.uas.uaspda.customview.ClearableEditText
                    android:id="@+id/et_withdraw_scmake"
                    style="@style/PopWinEditTextStyle"
                    android:layout_width="match_parent"
                    android:hint="@string/hint_withdrawcollect_fragment_scmake"/>
                <!--显示服务器信息区域-->
                <com.uas.uaspda.customview.CustomScrollView
                    style="@style/InnerNoticeTextblockStyle">
                    <TextView
                        android:id="@+id/tv_message_withdraw"
                        style="@style/innerNoticeContentTextStyle"/>
                </com.uas.uaspda.customview.CustomScrollView>
                <!--按钮-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_ok_withdraw_scmake"
                        style="@style/PopwinOKButtonStyle"/>
                    <Button
                        android:id="@+id/btn_cancel_withdraw_scmake"
                        android:layout_toLeftOf="@id/btn_ok_withdraw_scmake"
                        style="@style/PopwinCancleButtonStyle"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_height="50dp"
            android:layout_width="match_parent"/>
    </LinearLayout>
</RelativeLayout>